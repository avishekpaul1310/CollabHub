# CollabHub Environment Variables
# Copy this file to .env and fill in the values for your production environment
# SECURITY SETTINGS
DEBUG=False
SECRET_KEY=your-very-strong-secret-key-here
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# DATABASE SETTINGS
# Format: DATABASE_URL=postgres://user:password@host:port/database
DATABASE_URL=postgres://username:password@hostname:5432/collabhub

# REDIS SETTINGS (for WebSockets and Celery)
REDIS_URL=redis://hostname:6379/0

# GOOGLE CLOUD STORAGE (if using GCS for file storage)
USE_GCS=True
GS_BUCKET_NAME=your-bucket-name
GS_CREDENTIALS=/path/to/google-credentials.json
GCS_STATIC=True  # Set to True if you want to store static files in GCS too

# LOGGING
DJANGO_LOG_LEVEL=INFO

# OPTIONAL SETTINGS
# TIME_ZONE=UTC  # Override time zone if needed